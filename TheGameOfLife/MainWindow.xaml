<Window x:Class="TheGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheGameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="614.75" Width="1117.25">
    <Grid Margin="0,0,0,7.5" HorizontalAlignment="Left" Width="1107">
        <ComboBox HorizontalAlignment="Left" Margin="953,176,-273,0" VerticalAlignment="Top" Width="120" IsEditable="False">
            <ComboBoxItem IsSelected="True">Individual</ComboBoxItem>
        </ComboBox>
        <Label Name="lblTime" HorizontalAlignment="Left" Margin="1042,537,0,0" VerticalAlignment="Top"/>
        <Canvas x:Name="panelGame" HorizontalAlignment="Left" Height="523" Margin="24,24,0,0" VerticalAlignment="Top" Width="735"/>
        <Button x:Name="startButton" Content="START" HorizontalAlignment="Left" Margin="911,117,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click" Foreground="#FFFFF7F7" BorderBrush="#FF4C4545">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF8E7F7F" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
